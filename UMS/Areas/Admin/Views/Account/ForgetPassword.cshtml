@model UMS.Models.ViewModels.ForgetPasswordVM
@{
    Layout = "~/Views/Shared/_LayoutFirst.cshtml";
}

<section>
    <div class="container text-center m-5">
        @if (ViewBag.Success == false)
        {
            <div class="alert alert-danger" role="alert">
                <p>Email is Not Registered</p>
            </div>
        }

    </div>
    @if (Model.IsSuccess == true)
    {
        <div class="container text-center m-5">
            <div class="alert alert-success" role="alert">
                <p>Email Send Successfully</p>
            </div>
            <a class="text-decoration-none btn btn-primary" asp-action="Login" asp-controller="Account" asp-area="Admin">Back to Login</a>
        </div>
    }
    else
    {
        <div class="form-container p-5">
            <h1>Forget Password</h1>
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="control">
                    <label for="Email">Name</label>
                    <input asp-for="Email" class="form-control" id="email">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="control">
                    <div class="row">
                        <div class="col-md-6 col-lg-6 col-sm-12">
                        
                            <button type="submit" class="btn btn-primary form-control">Submit</button>
                        </div>
                        <div class="col-md-6 col-lg-6 col-sm-12">
                            <a class="text-decoration-none btn btn-success form-control"  asp-action="Login" asp-controller="Account" asp-area="Admin">Back</a>
                        </div>

                    </div>
                    
                </div>
            </form>
        </div>
    }

</section>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}

