
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container" id="main-container" >

    <span id="messageBox" class="d-none">@TempData["message"]</span>
    <h2 class="text-primary text-center border-bottom">Course Prerequisites </h2>
    <div class="row pt-4">
        <div class="col-8">
            <div class="input-group">
                <input class="form-control" placeholder="Search..." id="search" />
                <div class="input-group-prepend">
                    <div class="input-group-text"><i class="fas fa-search"></i></div>
                </div>
            </div>
        </div>

        <div class="col-4">
            <input class="btn btn-info form-control" type="submit" value="Reset" id="resetBtn" />
        </div>

        <div id="table-container" class="col-lg-12 col-md-12 col-sm-12">

        </div>
    </div>
</div>
@section Scripts{

    <script>

        $(document).ready(function () {
            getData();
        });
        function getData() {
            $.ajax({
                url: '@Url.Action("CoursePreTable", "CoursePre")',
                type: "GET"
            }).done(function (response) {
                $("#table-container").html(response);
            }).fail(function (xhr) {
                toastr.error("Something went wrong");
            })
        }
        $("#search").keyup(function () {
            var searchValue = $("#search").val();
           
            if (searchValue != "") {
                $.ajax({
                    url: '@Url.Action("CoursePreTable", "CoursePre")',
                    type: "GET",
                    data: {
                        searchValue: searchValue,
                        
                    }
                }).done(function (response) {
                    $("#table-container").html(response);
                }).fail(function (xhr) {
                    toastr.error("Something went error");
                })
            }
            else {
                toastr.error("Nothing to Search");
            }

        });

        var messageText = $("#messageBox").text();
        if (messageText != "") {
            toastr.success(messageText);
            $("#messageBox").text('');
        }

        $("#resetBtn").click(function () {
            var searchValue = $("#search").val();
            $("#search").val('');
            if (searchValue != "") {
                $.ajax({
                    url: '@Url.Action("CoursePreTable", "CoursePre")',
                    type: "GET"
                }).done(function (response) {
                    $("#table-container").html(response);
                }).fail(function (xhr) {
                    toastr.error("Something went error");
                })
            }
            else {
                toastr.error("You can not reset at this time");
            }

        });
    </script>
}