@model UMS.Models.ViewModels.FacultyCourseVM
@{
    ViewData["Title"] = "CourseList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" id="main-container">
    <div class="bg-primary text-white p-3 rounded mb-3">
        <h3 class="text-center">Advising Courses</h3>


    </div>
    <div class="row">
        @if (Model.CourseList.Count() > 0)
        {
            foreach (var course in Model.CourseList)
            {

                <div class="col-lg-4 col-md-6 mb-2">
                    <div class="card text-center bg-light">
                        <div class="card-body">
                            <h1 class="card-title">@course.Courses.Initial.@course.Section.Initial</h1>
                            <div>
                                <h3 class="font-light mb-0">@course.Courses.Name</h3>
                                <h5>(@course.Semester.Name)</h5>
                            </div>
                            <hr />
                          
                            <a href="~/Admin/User/FacultyStudentList?Id=@course.Id&userId=@ViewBag.UserId">
                                See All Students
                            </a>
                           
                        </div>
                    </div>
                </div>

            }
        }
        else
        {
            <p class="text-center text-danger">No Course Advised at this time</p>
        }

    </div>
    <div class="row mt-3">
        <div class="col-lg-3 col-md-4 col-sm-6">
            <a asp-action="Index" asp-controller="User" class="btn btn-primary form-control">Back to User List</a>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(".loader").fadeOut(1000);
        $(".wrapper").fadeIn(1000);
    </script>
}