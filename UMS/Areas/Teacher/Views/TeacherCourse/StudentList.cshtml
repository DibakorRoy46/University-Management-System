
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container" id="main-container">
    <h2 class="text-primary text-center border-bottom">Student List</h2>
    <div class="row pt-4">
        <div class="col-8">
            <div class="input-group">
                <input class="form-control" placeholder="Search..." id="search" />
                <div class="input-group-prepend">
                    <div class="input-group-text"><i class="fas fa-search"></i></div>
                </div>
            </div>
        </div>
        <div class="col-4">
            <input class="btn btn-primary form-control" type="submit" value="Reset" id="resetBtn" />
        </div>
        <div id="table-container" class="col-12">

        </div>
    </div>
</div>

@section Scripts{

    <script>
       
      
        $(document).ready(function () {
            getData();
        });
        function getData() {
            $.ajax({
                url: '@Url.Action("StudentListPartial", "TeacherCourse")',
                type: "GET",
                data: {
                    courseId: '@ViewBag.CouseId'
                }
            }).done(function (response) {
                $(".loader").fadeOut(1000);
                $(".wrapper").fadeIn(1000);
                $("#table-container").html(response);
            }).fail(function (xhr) {
                $(".loader").fadeOut(1000);
                $(".wrapper").fadeIn(1000);
                toastr.error("Something went wrong");
            });
        }


        $("#search").keyup(function () {
            var searchValue = $("#search").val();
            $.ajax({
                url: '@Url.Action("StudentListPartial", "TeacherCourse")',
                type: "GET",
                data: {
                    searchValue: searchValue,
                    courseId: '@ViewBag.CouseId'
                }
            }).done(function (response) {
                $(".loader").fadeOut(1000);
                $(".wrapper").fadeIn(1000);
                $("#table-container").html(response);
            }).fail(function (xhr) {
                $(".loader").fadeOut(1000);
                $(".wrapper").fadeIn(1000);
                toastr.error("Something went error");
            })
        });


        $("#resetBtn").click(function () {
            var searchValue = $("#search").val();
            $("#search").val('');
            if (searchValue != "") {
                $.ajax({
                    url: '@Url.Action("StudentListPartial", "TeacherCourse")',
                    type: "GET"
                }).done(function (response) {
                    $(".loader").fadeOut(1000);
                    $(".wrapper").fadeIn(1000);
                    $("#table-container").html(response);
                }).fail(function (xhr) {
                    $(".loader").fadeOut(1000);
                    $(".wrapper").fadeIn(1000);
                    toastr.error("Something went error");
                })
            }
            else {
                $(".loader").fadeOut(1000);
                $(".wrapper").fadeIn(1000);
                toastr.error("Nothing to Reset");
            }

        });
    </script>
}